{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Album example</h1>
      <p class="lead text-muted">Something short and leading about the collection belowâ€”its contents, the creator, etc.
        Make it short and sweet, but not too short so folks don't simply skip over it entirely.</p>
      <p>
        <a href="#" class="btn btn-primary my-2">Main call to action</a>
        <a href="#" class="btn btn-secondary my-2">Secondary action</a>
      </p>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        {% for article in articles | reverse %} {# boucle sur la variables articles (dans le controller) et cree autant
        de div quil ya d'article en bdd #}
        <div class="col-md-3">
          <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="{{article.picture}}" width="200" height="200" alt="Card image cap">
            <div class="card-body">
              <h4 class="text-center">{{article.title}}</h4>
              <h5 class="text-center">{{article.subtitle}}</h5>
              <p class="card-text">{{article.description | length > 50 ? article.description|slice(0, 50)}}... </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{path('single_article',{'id': article.id })}}" type="button" class="btn btn-sm btn-outline-secondary">Voir</a>
                </div>
                <small class="text-muted">{{article.createdat | date('d/M/y')}}</small>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</main>

{% endblock %}